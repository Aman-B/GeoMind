<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fsdf.SelectActivity">

    <Button
        android:id="@+id/view_all_tasks_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View All Tasks"
        android:layout_marginTop="50dp"
        android:paddingBottom="16px"
        android:paddingLeft="16px"
        android:paddingRight="30px"
        android:paddingTop="16px"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/add_task_button"
        android:layout_alignStart="@+id/add_task_button" />

    <Button
        android:id="@+id/add_task_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16px"
        android:paddingLeft="25px"
        android:paddingRight="25px"
        android:paddingTop="16px"
        android:layout_below="@id/view_all_tasks_button"
        android:layout_centerHorizontal="true"
        android:text="Add New Task" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="16px"
        android:paddingLeft="95px"
        android:paddingRight="95px"
        android:paddingTop="16px"
        android:layout_below="@id/add_task_button"
        android:layout_centerHorizontal="true"
        android:text="Exit" />
</RelativeLayout>
